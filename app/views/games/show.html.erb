<p id="notice"><%= notice %></p>

<p>
  <strong>Current player:</strong>
  <%= @game.current_player.inspect %>
</p>

  <% @game.players.each do |player| %>
    <p>
    <%= player.inspect %>
    <ol>
      <% player.monsters.each do |monster| %>
        <li>
          <%= monster.inspect %>
        </li>
      <% end %>
    </ol>
  </p>
  <% end %>

<%= form_for(@game) do |f| %>
  <%= f.hidden_field :action, :value => 'attack' %>
  <%= f.submit 'Attack!' %>
<% end %>

<%= link_to 'Back', games_path %>
